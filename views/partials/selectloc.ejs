<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
<style>
    #map {
        height: 400px;
        width: 100%;
        border: 1px solid black;
    }
</style>
<h6 id="address">Loading Address...</h6>
<p id="coords"></p>
<div id="map"></div>

<script>
    var map = L.map('map').fitWorld();

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: 'Â© OpenStreetMap'
    }).addTo(map);

    map.locate({
        setView: true, maxZoom: 16,
        enableHighAccuracy: true,
        timeout: 10000,
        maximumAge: 0
    });

    function onLocationFound(e) {
        var radius = e.accuracy;
        var lat = e.latlng.lat;
        var lng = e.latlng.lng;
        var coords = "Latitude: " + lat + ", " + "Longitude: " + lng;

        L.marker(e.latlng).addTo(map)
            .bindPopup("You are within " + radius + " meters from this point").openPopup();
        L.circle(e.latlng, radius).addTo(map);

        document.getElementById("coords").textContent = coords;

        document.getElementById("coords").textContent = coords;
        document.getElementById('address').innerHTML = `<i>Fetching location...</i>`;
        
        // Caching Logic
        const cacheKey = `addr_${lat.toFixed(4)}_${lng.toFixed(4)}`; // Approx 11m precision
        const cachedAddr = localStorage.getItem(cacheKey);

        if (cachedAddr) {
            console.log("Using cached address");
            updateAddressUI(cachedAddr, lat, lng);
        } else {
            fetch(`https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=${lat}&lon=${lng}`)
                .then(res => res.json())
                .then(data => {
                    const address = data.display_name;
                    localStorage.setItem(cacheKey, address); // Save to cache
                    updateAddressUI(address, lat, lng);
                })
                .catch(err => {
                    console.error("Failed to fetch address:", err);
                    document.getElementById('address').innerText = "Address not found.";
                });
        }
    }

    function updateAddressUI(address, lat, lng) {
        // Optimize address display (Shorten if too long)
        // Split by comma, take first 3 parts if too long
        let shortAddress = address; 
        const parts = address.split(',');
        if (parts.length > 5) {
             shortAddress = parts.slice(0, 4).join(',') + '...';
        }

        document.getElementById('address').innerHTML = `<b>${shortAddress}</b>`;
        // Keep full address in hidden input
        const locInput = document.getElementById("location");
        if(locInput && locInput.value === "") locInput.value = address;
        
        if(document.getElementById("lat")) document.getElementById("lat").value = lat;
        if(document.getElementById("lon")) document.getElementById("lon").value = lng;
    }
    }


    map.on('locationfound', onLocationFound);

    function onLocationError(e) {
        alert(e.message);
    }

    map.on('locationerror', onLocationError);
</script>