<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
<style>
    #map {
        height: 400px;
        width: 100%;
        border: 1px solid black;
    }
</style>
<h6 id="address">Loading Address...</h6>
<p id="coords"></p>
<div id="map"></div>

<script>
    var map = L.map('map').fitWorld();

    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '© OpenStreetMap'
    }).addTo(map);

    // Create a custom control for the refresh button
    var refreshControl = L.Control.extend({
        options: {
            position: 'topright'
        },
        onAdd: function (map) {
            var container = L.DomUtil.create('div', 'leaflet-bar leaflet-control leaflet-control-custom');
            container.innerHTML = '<button type="button" onclick="refreshLocation()" style="background-color: white; border: none; padding: 5px 10px; cursor: pointer; font-weight: bold;"><i class="fa fa-sync-alt"></i> Restart GPS</button>';
            container.style.backgroundColor = 'white'; 
            container.style.padding = '5px';
            container.style.cursor = 'pointer';
            
            // Prevent clicks from propagating to the map
            L.DomEvent.disableClickPropagation(container);
            return container;
        }
    });
    map.addControl(new refreshControl());

    let watchId = null;
    let timeoutHandle = null;
    let isLocked = false;
    const TARGET_ACCURACY = 15; // meters
    const TIMEOUT_MS = 20000; // 20 seconds

    function refreshLocation() {
        // Reset state
        if (watchId) navigator.geolocation.clearWatch(watchId);
        if (timeoutHandle) clearTimeout(timeoutHandle);
        isLocked = false;
        
        document.getElementById('address').innerHTML = `<i>Initializing GPS...</i>`;
        document.getElementById('coords').innerHTML = `<span class="text-muted">Wait for fix...</span>`;
        
        // Clear hidden inputs
        if(document.getElementById("location")) document.getElementById("location").value = "";
        if(document.getElementById("lat")) document.getElementById("lat").value = "";
        if(document.getElementById("lon")) document.getElementById("lon").value = "";
        
        // Start Timeout
        timeoutHandle = setTimeout(() => {
            if(!isLocked) {
                console.log("GPS Timeout - locking on current best.");
                lockLocation(true); // Force lock due to timeout
            }
        }, TIMEOUT_MS);

        if (navigator.geolocation) {
             watchId = navigator.geolocation.watchPosition(
                onLocationFound, 
                onLocationError, 
                { 
                    enableHighAccuracy: true, 
                    timeout: 20000, 
                    maximumAge: 0 
                }
            );
        } else {
             document.getElementById('address').innerHTML = "Geolocation is not supported.";
        }
    }

    function onLocationFound(pos) {
        if(isLocked) return; // Ignore updates if locked

        var radius = pos.coords.accuracy;
        var lat = pos.coords.latitude;
        var lng = pos.coords.longitude;
        var coords = "Latitude: " + lat.toFixed(6) + ", " + "Longitude: " + lng.toFixed(6);
        
        var now = new Date();
        var timeString = now.toLocaleTimeString();

        var latlng = L.latLng(lat, lng);

        // Clear existing markers
        map.eachLayer(function (layer) {
            if (layer instanceof L.Marker || layer instanceof L.Circle) {
                map.removeLayer(layer);
            }
        });

        // Add new marker
        L.marker(latlng).addTo(map)
            .bindPopup("You are within " + radius.toFixed(1) + " meters from this point").openPopup();
        L.circle(latlng, radius).addTo(map);

        map.setView(latlng, 16); 

        // Update UI
        document.getElementById("coords").innerHTML = `${coords} <br><small class='text-muted'>(Accuracy: ±${radius.toFixed(1)}m) - Last Update: ${timeString}</small>`;
        document.getElementById('address').innerHTML = `<i>Refining address...</i>`;
        
        // Update inputs immediately so something is always there
        if(document.getElementById("lat")) document.getElementById("lat").value = lat;
        if(document.getElementById("lon")) document.getElementById("lon").value = lng;

        // Fetch Address
        fetchAddress(lat, lng, (addr) => {
             // Logic to check if we should lock
             if (radius <= TARGET_ACCURACY) {
                 lockLocation(false, "Accuracy Optimized");
             }
        });
    }

    function fetchAddress(lat, lng, callback) {
        fetch(`https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=${lat}&lon=${lng}`, {
            headers: { 'User-Agent': 'CitySafeApp/1.0' }
        })
            .then(res => {
                if (!res.ok) throw new Error(`HTTP Error: ${res.status}`);
                return res.json();
            })
            .then(data => {
                if (data && data.display_name) {
                    const address = data.display_name;
                    updateAddressUI(address);
                    if (callback) callback(address);
                    
                    // Also update inputs here to ensure address is synced
                    if (document.getElementById("location")) document.getElementById("location").value = address;
                } else {
                    throw new Error("Empty display_name from Nominatim");
                }
            })
            .catch(err => {
                console.error("Failed to fetch address:", err);
                // Fallback: Show coordinates in address field instead of "Not found"
                const fallback = `Unmarked Area (Lat: ${lat.toFixed(4)}, Lon: ${lng.toFixed(4)})`;
                document.getElementById('address').innerHTML = `<span class="text-muted">${fallback}</span>`;
                if (document.getElementById("location")) document.getElementById("location").value = fallback;
            });
    }

    function lockLocation(isTimeout, reason) {
        if(isLocked) return;
        isLocked = true;
        
        if (watchId) navigator.geolocation.clearWatch(watchId);
        if (timeoutHandle) clearTimeout(timeoutHandle);
        watchId = null; 
        timeoutHandle = null;

        const reasonText = isTimeout ? "Timeout (Best Available)" : (reason || "Location Locked");
        const statusEl = document.getElementById('coords');
        if(statusEl) {
            statusEl.innerHTML += `<br><strong class='text-success'><i class='fa fa-check-circle'></i> ${reasonText}</strong>`;
        }
        console.log("Location locked:", reasonText);
    }

    function updateAddressUI(address) {
        if (!address) return;
        let shortAddress = address; 
        const parts = address.split(',');
        if (parts.length > 5) {
             shortAddress = parts.slice(0, 4).join(',') + '...';
        }
        document.getElementById('address').innerHTML = `<b>${shortAddress}</b>`;
    }

    function onLocationError(err) {
        console.warn("Geolocation Error:", err.message);
        // Don't lock on error, let it retry or let user click retry
        let msg = "Unable to retrieve location.";
        if (err.code === 1) msg = "Loc. permission denied.";
        else if (err.code === 2) msg = "Location unavailable.";
        else if (err.code === 3) msg = "Location request timed out.";
        
        document.getElementById('address').innerHTML = `<span class="text-danger">${msg}</span> <button class='btn btn-sm btn-outline-primary ms-2' onclick='refreshLocation()'>Retry</button>`;
    }

    // Initial Locate
    refreshLocation();
</script>