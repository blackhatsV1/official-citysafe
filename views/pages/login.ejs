<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>
<!-- ========================================================================= -->

<body>
  <div class="container-fluid position-relative d-flex p-0">
    <!-- Spinner Start -->
   <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    <!-- Spinner End -->

          <!-- Sign In Start -->
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="/visitor" class="">
                                <h3 class="text-primary"><i class="fa fa-shield-alt me-2"></i>CitySafe</h3>
                            </a>
                            <h3>Login</h3>
                        </div>
                        <form method="POST" action="/login">
                          <div class="form-floating mb-3">
                              <input type="text" name="identifier" class="form-control bg-dark text-white border-0" id="floatingInput" placeholder="Email or Full Name" required>
                              <label for="floatingInput">Email or Full Name</label>
                          </div>
                          <div class="form-floating mb-4 position-relative">
                              <input type="password" name="password" class="form-control bg-dark text-white border-0" id="floatingPassword" placeholder="Password" required style="padding-right: 40px;">
                              <label for="floatingPassword">Password</label>
                              <i class="bi bi-eye-slash position-absolute top-50 end-0 translate-middle-y me-3 text-primary" id="toggleLoginPass" style="cursor: pointer; z-index: 10;"></i>
                          </div>
                          
                          <button type="submit" id="login-btn" class="btn btn-primary py-3 w-100 mb-4 shadow">Sign In</button>
                          <p class="text-center mb-0">Don't have an Account? <a href="/register" class="text-primary fw-bold">Sign Up</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sign In End -->
      <!-- Content End -->


  </div>
  <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/chart/chart.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
    <script>
        const toggleLoginPass = document.querySelector("#toggleLoginPass");
        const loginPassInput = document.querySelector("#floatingPassword");

        toggleLoginPass.addEventListener("click", function () {
            const isPassword = loginPassInput.getAttribute("type") === "password";
            loginPassInput.setAttribute("type", isPassword ? "text" : "password");
            this.classList.toggle("bi-eye");
            this.classList.toggle("bi-eye-slash");
        });
    </script>
</body>

</html>