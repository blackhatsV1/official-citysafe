<body class="bg-dark text-white">
  <%- include('../partials/page-start'); %>
  <div class="container-fluid position-relative d-flex p-0">
    <%- include('../partials/spinner'); %>
      <%- include('../partials/visitor-sidebar'); %>

        <div class="content">
          <%- include('../partials/visitor-navbar'); %>

            <div class="container-fluid pt-4 px-4">
              <div class="bg-card shadow-sm text-center rounded mb-4 p-5">
                <div class="d-flex align-items-center justify-content-center gap-3">
                  <i class="bi bi-cloud-sun fs-1 text-primary"></i>
                  <h1 class="mb-0 fw-800 text-head letter-spacing-1">Welcome to CitySafe!</h1>
                </div>
              </div>

              <div class="row g-4">
                <div class="col-sm-8">
                  <div class="bg-card rounded h-100 p-4 shadow-sm border border-light">
