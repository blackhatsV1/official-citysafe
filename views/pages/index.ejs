<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <%- include('../partials/spinner'); %>
            <!-- Spinner End -->


            <!-- Sidebar Start -->
            <%- include('../partials/user-sidebar'); %>
                <!-- Sidebar End -->


                <!-- Content Start -->
                <div class="content">
                    <!-- Navbar Start -->
                    <%- include('../partials/user-navbar'); %>
                        <!-- Navbar End -->


                        <!-- Map Start -->
                        <div class="container-fluid pt-4 px-4">
                            <div class="row g-4">
                                <div class="col-sm-12 col-xl-6">
                                    <div class="h-100 bg-secondary rounded p-4">
                                        <div class="d-flex align-items-center justify-content-between mb-4">
                                            <h6 class="mb-0 text-uppercase" style="letter-spacing: 1px;">Live Location
                                                Feed</h6>
                                            <div class="text-success small"><i class="fa fa-circle me-1"
                                                    style="font-size: 8px;"></i>ONLINE</div>
                                        </div>
                                        <hr class="border-secondary mb-3 mt-0">
                                        <%- include('../partials/selectloc'); %>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-xl-6">
                                    <div class="h-100 bg-secondary rounded p-4">
                                        <div class="d-flex align-items-center justify-content-between mb-4">
                                            <h6 class="mb-0 text-uppercase"
                                                style="letter-spacing: 1px; color: var(--primary);">Send SOS</h6>
                                        </div>
                                        <form action="/report" method="POST" id="dashboardSosForm" autocomplete="off">
                                            <label class="form-label mb-3 text-white text-center w-100">
                                                What is your emergency?
                                            </label>

                                            <!-- Hidden Input for Disaster Type -->
                                            <!-- Renamed ID to avoid conflicts and added autocomplete=off -->
                                            <input type="hidden" name="type_of_disaster"
                                                id="dashboard_selected_disaster_type" autocomplete="off">

                                            <div class="row g-2 mb-4">
                                                <div class="col-6">
                                                    <button type="button" onclick="triggerDashboardSos('Fire')"
                                                        class="btn btn-outline-danger w-100 h-100 p-3 pt-4 pb-4 d-flex flex-column align-items-center justify-content-center"
                                                        style="border-width: 1px; transition: all 0.1s;">
                                                        <i class="fa fa-fire mb-2" style="font-size: 1.5rem;"></i>
                                                        <span style="font-weight: 700; letter-spacing: 1px;">FIRE</span>
                                                    </button>
                                                </div>

                                                <div class="col-6">
                                                    <button type="button" onclick="triggerDashboardSos('Flood')"
                                                        class="btn btn-outline-info w-100 h-100 p-3 pt-4 pb-4 d-flex flex-column align-items-center justify-content-center"
                                                        style="border-width: 1px; transition: all 0.1s;">
                                                        <i class="fa fa-water mb-2" style="font-size: 1.5rem;"></i>
                                                        <span
                                                            style="font-weight: 700; letter-spacing: 1px;">FLOOD</span>
                                                    </button>
                                                </div>

                                                <div class="col-6">
                                                    <button type="button" onclick="triggerDashboardSos('Earthquake')"
                                                        class="btn btn-outline-warning w-100 h-100 p-3 pt-4 pb-4 d-flex flex-column align-items-center justify-content-center"
                                                        style="border-width: 1px; transition: all 0.1s;">
                                                        <i class="fa fa-globe-americas mb-2"
                                                            style="font-size: 1.5rem;"></i>
                                                        <span
                                                            style="font-weight: 700; letter-spacing: 1px;">QUAKE</span>
                                                    </button>
                                                </div>

                                                <div class="col-6">
                                                    <button type="button" onclick="triggerDashboardSos('Landslide')"
                                                        class="btn btn-outline-secondary w-100 h-100 p-3 pt-4 pb-4 d-flex flex-column align-items-center justify-content-center"
                                                        style="border-width: 1px; transition: all 0.1s;">
                                                        <i class="fa fa-mountain mb-2" style="font-size: 1.5rem;"></i>
                                                        <span
                                                            style="font-weight: 700; letter-spacing: 1px;">LANDSLIDE</span>
                                                    </button>
                                                </div>
                                            </div>

                                            <label class="form-label mb-1">Your Location:</label>
                                            <textarea class="form-control mb-0" id="location" name="location"
                                                placeholder="Your Location" required></textarea>
                                            <input type="hidden" id="lat" name="lat">
                                            <input type="hidden" id="lon" name="lon">
                                        </form>

                                        <script>
                                            function triggerDashboardSos(type) {
                                                const input = document.getElementById('dashboard_selected_disaster_type');
                                                if (input) {
                                                    input.value = type;
                                                }
                                                // Validate location before submitting
                                                const loc = document.querySelector('#dashboardSosForm textarea[name="location"]').value;
                                                // Note: Ideally we replicate the location check or just rely on 'required'
                                                document.getElementById('dashboardSosForm').submit();
                                            }
                                        </script>


                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Map End -->

                        <!-- Footer Start -->
                        <%- include('../partials/footer'); %>
                            <!-- Footer End -->

                </div>
                <!-- Content End -->


                <!-- Back to Top -->
                <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>


</body>

</html>

