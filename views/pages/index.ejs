<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <%- include('../partials/spinner'); %>
            <!-- Spinner End -->


            <!-- Sidebar Start -->
            <%- include('../partials/user-sidebar'); %>
                <!-- Sidebar End -->


                <!-- Content Start -->
                <div class="content">
                    <!-- Navbar Start -->
                    <%- include('../partials/user-navbar'); %>
                        <!-- Navbar End -->


                        <!-- Map Start -->
                        <!-- Main Grid -->
                        <div class="container-fluid pt-4 px-4">
                            <div class="row g-4">
                                <div class="col-sm-12 col-xl-7">
                                    <div class="card h-100">
                                        <div class="d-flex align-items-center justify-content-between mb-3">
                                            <h6 class="mb-0">LOCAL OPERATIONS FEED</h6>
                                            <div class="text-slate small fw-bold"><i class="fa fa-circle me-1"
                                                    style="font-size: 7px;"></i>LIVE</div>
                                        </div>
                                        <div class="border-bottom border-slate mb-3"></div>
                                        <%- include('../partials/selectloc'); %>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-xl-5">
                                    <div class="card h-100">
                                        <div class="d-flex align-items-center justify-content-between mb-3">
                                            <h6 class="mb-0">INCIDENT REPORTING</h6>
                                        </div>
                                        <p class="text-muted small mb-4 italic">Specify the nature of the emergency for
                                            immediate dispatch.</p>

                                        <form action="/report" method="POST" id="dashboardSosForm">
                                            <input type="hidden" name="type_of_disaster"
                                                id="dashboard_selected_disaster_type">

                                            <div class="row g-2 mb-4">
                                                <div class="col-6">
                                                    <button type="button" onclick="triggerDashboardSos('Fire')"
                                                        class="btn btn-outline-secondary w-100 py-4 d-flex flex-column align-items-center">
                                                        <i class="fa fa-fire mb-2 fs-4"></i>
                                                        <span>FIRE</span>
                                                    </button>
                                                </div>
                                                <div class="col-6">
                                                    <button type="button" onclick="triggerDashboardSos('Flood')"
                                                        class="btn btn-outline-secondary w-100 py-4 d-flex flex-column align-items-center">
                                                        <i class="fa fa-water mb-2 fs-4"></i>
                                                        <span>FLOOD</span>
                                                    </button>
                                                </div>
                                                <div class="col-6">
                                                    <button type="button" onclick="triggerDashboardSos('Earthquake')"
                                                        class="btn btn-outline-secondary w-100 py-4 d-flex flex-column align-items-center">
                                                        <i class="fa fa-globe-americas mb-2 fs-4"></i>
                                                        <span>QUAKE</span>
                                                    </button>
                                                </div>
                                                <div class="col-6">
                                                    <button type="button" onclick="triggerDashboardSos('Landslide')"
                                                        class="btn btn-outline-secondary w-100 py-4 d-flex flex-column align-items-center">
                                                        <i class="fa fa-mountain mb-2 fs-4"></i>
                                                        <span>SLIDE</span>
                                                    </button>
                                                </div>
                                            </div>

                                            <label class="small fw-bold text-uppercase mb-2 d-block">Dispatch
                                                Location:</label>
                                            <textarea class="form-control mb-3" id="location" name="location"
                                                placeholder="VERIFYING CURRENT COORDS..." required></textarea>
                                            <input type="hidden" id="lat" name="lat">
                                            <input type="hidden" id="lon" name="lon">

                                            <button type="submit" class="btn btn-primary w-100 py-3">INITIATE EMERGENCY
                                                PROTOCOL</button>
                                        </form>

                                        <script>
                                            function triggerDashboardSos(type) {
                                                const input = document.getElementById('dashboard_selected_disaster_type');
                                                if (input) input.value = type;
                                                // Location check
                                                const locField = document.querySelector('#dashboardSosForm textarea[name="location"]');
                                                if (!locField.value || locField.value.trim() === "") {
                                                    alert("Awaiting location resolution. Please wait.");
                                                    return;
                                                }
                                                document.getElementById('dashboardSosForm').submit();
                                            }
                                        </script>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Map End -->

                        <!-- Footer Start -->
                        <%- include('../partials/footer'); %>
                            <!-- Footer End -->

                </div>
                <!-- Content End -->


                <!-- Back to Top -->
                <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>


</body>

</html>

