<div class="sidebar">
    <% const _cp=(typeof currentPage !=='undefined' ) ? currentPage : (typeof locals !=='undefined' && typeof
        locals.currentPage !=='undefined' ? locals.currentPage : '' ); %>
        <div class="px-4 mb-4">
            <a href="/adminpage" class="d-flex align-items-center gap-2 text-white">
                <i class="fa fa-shield-alt fs-4 text-primary"></i>
                <h4 class="mb-0 text-white fw-bold letter-spacing-1">CITYSAFE</h4>
            </a>
        </div>

        <!-- Admin Profile Summary -->
        <div class="px-4 mb-4">
            <div class="p-3 rounded-lg"
                style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1);">
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-white rounded-circle d-flex align-items-center justify-content-center"
                        style="min-width: 32px; height: 32px;">
                        <i class="fa fa-user-shield text-dark fs-6"></i>
                    </div>
                    <div class="overflow-hidden">
                        <h6 class="mb-0 text-white text-truncate small fw-bold">
                            <%= username %>
                        </h6>
                        <span class="text-muted d-block text-uppercase"
                            style="font-size: 0.65rem; letter-spacing: 0.05em;">Admin Unit</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="nav flex-column">
            <span class="px-4 mb-2 text-muted text-uppercase fw-bold" style="font-size: 0.7rem; opacity: 0.5;">Main
                Operations</span>
            <a href="/adminpage" class="nav-link <%= _cp === 'dashboard' ? 'active' : '' %>">
                <i class="fa fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            <a href="/status-overview" class="nav-link <%= _cp === 'status' ? 'active' : '' %>">
                <i class="fa fa-th-large"></i>
                <span>Status Grid</span>
            </a>

            <span class="px-4 mt-4 mb-2 text-muted text-uppercase fw-bold"
                style="font-size: 0.7rem; opacity: 0.5;">Intelligence</span>
            <a href="/disaster-reports" class="nav-link <%= _cp === 'sos' ? 'active' : '' %>">
                <i class="fa fa-bullhorn text-danger"></i>
                <span>SOS Reports</span>
            </a>
            <a href="/reports" class="nav-link <%= _cp === 'analytics' ? 'active' : '' %>">
                <i class="fa fa-chart-line"></i>
                <span>Analytics</span>
            </a>
            <a href="/assessment-results" class="nav-link <%= _cp === 'assessments' ? 'active' : '' %>">
                <i class="fa fa-file-contract"></i>
                <span>Assessments</span>
            </a>

            <span class="px-4 mt-4 mb-2 text-muted text-uppercase fw-bold"
                style="font-size: 0.7rem; opacity: 0.5;">Management</span>
            <div class="nav-item">
                <a href="/userslist" class="nav-link <%= _cp === 'users' ? 'active' : '' %>">
                    <i class="fa fa-users"></i>
                    <span>Directory</span>
                </a>
                <a href="/addusers" class="nav-link <%= _cp === 'add-citizen' ? 'active' : '' %>">
                    <i class="fa fa-user-plus"></i>
                    <span>Register Citizen</span>
                </a>
                <a href="/addresponder" class="nav-link <%= _cp === 'add-responder' ? 'active' : '' %>">
                    <i class="fa fa-user-shield"></i>
                    <span>Register Responder</span>
                </a>
            </div>

            <a href="/logout" class="nav-link mt-4 text-danger opacity-75">
                <i class="fa fa-sign-out-alt"></i>
                <span>Sign Out</span>
            </a>
        </div>
</div>